<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/teamNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="avatar"
            app:srcCompat="@drawable/ic_logo_00" />

        <ImageView
            android:id="@+id/team1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="avatar"
            app:srcCompat="@drawable/ic_logo_01" />

        <ImageView
            android:id="@+id/team2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="avatar"
            app:srcCompat="@drawable/ic_logo_02" />

        <ImageView
            android:id="@+id/team3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="avatar"
            app:srcCompat="@drawable/ic_logo_03" />

        <ImageView
            android:id="@+id/team4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="avatar"
            app:srcCompat="@drawable/ic_logo_04" />
    </LinearLayout>
</RelativeLayout>